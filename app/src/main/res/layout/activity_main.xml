<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.ksu.motygullin.calculator20.MainActivity">

    <TextView
        android:layout_weight="1"
        android:id="@+id/result"
        android:gravity="end"
        android:textColor="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60dp"
        android:textSize="30sp"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
       >
        <TextView
            android:textSize="40sp"
            android:id="@+id/tv"
            android:width="300dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:maxLength="20"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:hint="0"/>

    <Button
        style="@style/Widget.AppCompat.ButtonBar"
        android:background="@drawable/bg_button_c"
        android:textColor="#ffffff"
        android:id="@+id/C"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="C"/>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        style="@style/Widget.AppCompat.ButtonBar">

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/seven"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"/>
        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/eight"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"/>
        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/nine"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"/>
        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        style="@style/Widget.AppCompat.ButtonBar">

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/four"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            />
        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/five"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"/>
        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/six"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"/>
        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/multiplies"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="X"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        style="@style/Widget.AppCompat.ButtonBar">

    <Button
        style="@style/Widget.AppCompat.ButtonBar"
        android:background="@drawable/bg_button"
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:layout_height="match_parent"
        android:width="10dp"
        android:height="10dp"
        android:text="1"/>
    <Button
        style="@style/Widget.AppCompat.ButtonBar"
        android:background="@drawable/bg_button"
        android:id="@+id/two"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="2"/>
    <Button
        style="@style/Widget.AppCompat.ButtonBar"
        android:background="@drawable/bg_button"
        android:id="@+id/three"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="3"/>
        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:background="@drawable/bg_button"
            android:id="@+id/minus"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="â€”"/>

    </LinearLayout>



  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        style="@style/Widget.AppCompat.ButtonBar">
      <Button
          style="@style/Widget.AppCompat.ButtonBar"
          android:background="@drawable/bg_button"
          android:id="@+id/comma"
          android:textSize="30sp"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text=","/>
      <Button
        style="@style/Widget.AppCompat.ButtonBar"
        android:background="@drawable/bg_button"
        android:id="@+id/zero"
          android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="0"/>
      <Button
          style="@style/Widget.AppCompat.ButtonBar"
          android:background="@drawable/bg_button"
          android:id="@+id/equal"
          android:textSize="30sp"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="="/>
      <Button
          style="@style/Widget.AppCompat.ButtonBar"
          android:background="@drawable/bg_button"
          android:id="@+id/plus"
          android:textSize="30sp"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="+"/>

</LinearLayout>

    </LinearLayout>
